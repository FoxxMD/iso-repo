{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "outDir": "dist",
  },
  "references": [
    {
      "path": "../iso-base",
    },
    {
      "path": "../iso-did",
    },
  ],
  "include": ["src", "scripts", "test", "package.json"],
  "exclude": ["node_modules", "dist", "out"],
  "typedocOptions": {
    "entryPoints": [
      "src/signers/*.js",
      "src/verifiers/*.js",
      "src/asn1.js",
      "src/spki.js",
    ],
    "includeVersion": true,
    "excludeExternals": true,
    "internalModule": "<internal>",
  },
}
