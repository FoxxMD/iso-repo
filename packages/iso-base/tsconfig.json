{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "outDir": "dist",
  },
  "include": ["src", "scripts", "test", "package.json"],
  "exclude": ["node_modules", "dist", "out"],
  "typedocOptions": {
    "entryPoints": [
      "src/rfc4648.js",
      "src/crypto.js",
      "src/utf8.js",
      "src/utils.js",
      "src/base-x.js",
      "src/varint.js",
      "src/ec-compression.js",
    ],
    "includeVersion": true,
    "excludeExternals": true,
    "internalModule": "<internal>",
  },
}
