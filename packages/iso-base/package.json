{
  "name": "iso-base",
  "version": "0.0.1",
  "description": "Cloudflare Workers Utils",
  "author": "Hugo Dias <hugomrdias@gmail.com> (hugodias.me)",
  "license": "MIT",
  "repository": {
    "url": "hugomrdias/iso-repo",
    "directory": "packages/iso-base"
  },
  "type": "module",
  "main": "src/index.js",
  "types": "dist/src/index.d.ts",
  "browser": {
    "crypto": false,
    "./src/crypto": "./src/crypto-browser.js"
  },
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./src/index.js"
    },
    "./utils": {
      "types": "./dist/src/utils.d.ts",
      "import": "./src/utils.js"
    },
    "./utf8": {
      "types": "./dist/src/utf8.d.ts",
      "import": "./src/utf8.js"
    },
    "./crypto": {
      "types": "./dist/src/crypto.d.ts",
      "browser": "./src/crypto-browser.js",
      "import": "./src/crypto.js"
    }
  },
  "typesVersions": {
    "*": {
      "utils": [
        "dist/src/utils"
      ],
      "crypto": [
        "dist/src/crypto"
      ],
      "utf8": [
        "dist/src/utf8"
      ]
    }
  },
  "files": [
    "src",
    "dist/src/*.d.ts",
    "dist/src/*.d.ts.map"
  ],
  "scripts": {
    "lint": "tsc && eslint '**/*.{js,ts}' && prettier --check '**/*.{js,ts,yml,json}' --ignore-path ../../.gitignore",
    "test": "tsc"
  },
  "devDependencies": {
    "@scure/base": "^1.1.1",
    "@types/assert": "^1.5.6",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "assert": "^2.0.0",
    "hd-scripts": "^3.0.2",
    "micro-bmark": "^0.2.1",
    "mocha": "^10.2.0",
    "typescript": "4.9.4"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/hd-scripts/eslint/index.js"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "env": {
      "mocha": true
    },
    "ignorePatterns": [
      "dist"
    ]
  }
}
